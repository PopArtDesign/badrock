{
    "name": "popartdesign/badrock",
    "type": "project",
    "license": "proprietary",
    "description": "WordPress boilerplate",
    "require": {
        "php": ">=8.0",
        "composer/installers": "^2.2",
        "johnpbloch/wordpress": "^6.1",
        "roots/bedrock-autoloader": "^1.0",
        "roots/bedrock-disallow-indexing": "^2.0",
        "roots/soil": "^4.1",
        "roots/wp-password-bcrypt": "1.1.0",
        "voronkovich/wordpress-mailer-dsn": "@dev",
        "wecodemore/wpstarter": "^3@dev",
        "wpackagist-theme/twentytwentythree": "^1.0"
    },
    "require-dev": {
        "johnbillion/query-monitor": "^3.11",
        "symfony/var-dumper": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "allow-plugins": {
            "composer/installers": true,
            "johnpbloch/wordpress-core-installer": true,
            "wecodemore/wpstarter": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "wpstarter": {
            "skip-steps": ["build-mu-loader"]
        },
        "installer-paths": {
            "public/mu-plugins/{$name}/": [
                "type:wordpress-muplugin",
                "awesomemotive/wp-mail-smtp",
                "johnbillion/query-monitor",
                "roots/soil",
                "soberwp/intervention",
                "wpackagist-plugin/query-monitor",
                "wpackagist-plugin/soil"
            ],
            "public/plugins/{$name}/": ["type:wordpress-plugin"],
            "public/themes/{$name}/": ["type:wordpress-theme"],
            "public/{$name}": [
                "type:wordpress-dropin"
            ]
        },
        "wordpress-install-dir": "public/wp",
        "wordpress-content-dir": "public"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org",
            "only": ["wpackagist-plugin/*", "wpackagist-theme/*"]
        }
    ]
}
